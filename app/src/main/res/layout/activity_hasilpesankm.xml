<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:windowSoftInputMode="adjustResize"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.walangare.regina.totabuantaxi.Hasilpesankm">

    <LinearLayout
        android:shadowColor="#0b1552"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:background="#ffffff"
        android:id="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/dd"
            android:textColor="#3F51B5"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Tujuan     :  Kotamobagu - Manado "
            android:textSize="15sp"
            android:layout_marginLeft="60dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="30dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:id="@+id/d1"
            android:textColor="#3F51B5"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="Jam          : "
            android:textSize="15sp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/tv_jam"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="45dp"
        android:id="@+id/L2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="30dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:textColor="#3F51B5"
            android:id="@+id/tv3"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:text="Tanggal   :"
            android:layout_marginLeft="30dip"/>
        <TextView
            android:textColor="#3F51B5"
            android:id="@+id/tv_tgl"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/L3"
        android:layout_marginTop="65dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="30dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:id="@+id/tv4"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:text="Kursi         :"
            android:layout_marginLeft="30dip"/>
        <TextView
            android:id="@+id/tv_kursi"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="45dp" />
    </LinearLayout>

    <LinearLayout
    android:id="@+id/L4"
    android:layout_marginTop="85dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingRight="30dp"
    android:layout_marginLeft="30dp">

    <TextView
        android:id="@+id/tv5"
        android:textColor="#3F51B5"
        android:textSize="15sp"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="Harga       :"
        android:layout_marginLeft="30dip"/>
    <TextView
        android:id="@+id/tv_harga"
        android:textColor="#3F51B5"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="45dp" />
</LinearLayout>
    <LinearLayout
        android:id="@+id/tvnew"
        android:layout_marginTop="110dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="30dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:id="@+id/tv9"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Nama Pengemudi   :  "
            android:layout_marginLeft="30dip"/>
        <TextView
            android:id="@+id/tv_pengemudiKM"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tvne"
        android:layout_marginTop="130dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="30dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:id="@+id/tv10"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Kode Kendaraan      :  "
            android:layout_marginLeft="30dip"/>
        <TextView
            android:id="@+id/tv_kodeKM"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tvnewss"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="30dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:id="@+id/tv12"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Jenis Kendaraan     :  "
            android:layout_marginLeft="30dip"/>
        <TextView
            android:id="@+id/tv_jeniskendraanKM"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:text="Pilih Tujuan Pembayaran"
        android:layout_marginTop="195dp"/>

    <LinearLayout
        android:shadowColor="#0b1552"
        android:shadowDx="0"
        android:shadowDy="0"
        android:layout_marginTop="220dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:shadowColor="#A8A8A8"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:id="@+id/BRI"
            android:layout_marginLeft="40dp"
            android:src="@drawable/bri" />

        <ImageView
            android:shadowColor="#A8A8A8"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:id="@+id/BNI"
            android:layout_marginLeft="50dp"
            android:src="@drawable/bni" />

    </LinearLayout>

    <LinearLayout
        android:shadowColor="#0b1552"
        android:shadowDx="1"
        android:shadowDy="1"
        android:layout_marginTop="290dp"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">


            <ImageView
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/imgHolder"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="10dp"
                android:text="Nomor Tiket :"/>
            <TextView
                android:id="@+id/noKursi"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="250dp"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:background="#E5E5E5"
                android:textColor="#0b1552"
                android:text=" - Tunjukan nomor tiket kepada pengemudi sebagai bukti pemesanan, "
                android:layout_marginLeft="160dp"
                android:layout_marginTop="60dp"/>
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btPesan"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginTop="440dp"
        android:background="#ffffff"
        android:textAlignment="center"
        android:text="Pesan"
        />





</RelativeLayout>


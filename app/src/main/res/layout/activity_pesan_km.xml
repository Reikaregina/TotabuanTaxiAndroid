<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:windowSoftInputMode="adjustResize"
    android:background="@color/colorPrimary"
    tools:context="com.walangare.regina.totabuantaxi.PesanKM">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:text="Pilih Tanggal Keberangkatan" />

    <TextView
        android:hint="Date "
        android:id="@+id/tv_dateresult"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"/>
    <View android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="@color/colorWhite"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:text="Pilih Jam Keberangkatan" />

    <TextView
        android:hint="Time "
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:id="@+id/tv_Timeresult"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />
    <View android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="@color/colorWhite"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Pilih Kursi"/>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/A1"
            android:text="A1"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/seat_normal" />

        <ImageView
            android:id="@+id/steering"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/steering"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/B1"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/seat_normal"/>

        <ImageView
            android:id="@+id/B2"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/seat_normal"/>

        <ImageView
            android:id="@+id/B3"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/seat_normal"/>
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/C1"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:src="@drawable/seat_normal"/>

        <ImageView
            android:id="@+id/C2"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/seat_normal"/>

        <ImageView
            android:id="@+id/C3"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/seat_normal"/>
    </TableRow>

    <Button
        android:id="@+id/btPesan"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorWhite"
        android:textAlignment="center"
        android:text="Lanjut"
        android:paddingRight="20dp"
        android:layout_marginRight="100dp"/>
    </LinearLayout>

</RelativeLayout>
